{
  "version": "0.2.0",
  "configurations": [
    {
          "name": "Listen for XDebug",
          "type": "php",
          "request": "launch",
          "port": 9003,
          "log": true,
          "externalConsole": false,
          "pathMappings": {
              "/var/www/html": "${workspaceRoot}/www/html",
          },
          "ignore": [
              "**/vendor/**/*.php"
          ]
      },
      {
        "name": "Launch currently open script",
        "type": "php",
        "request": "launch",
        "program": "${file}",
        "cwd": "${fileDirname}",
        "port": 9003
    }
  ]
}